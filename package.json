{
  "name": "shopify-remix-cloudflare-template",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual -c \"npm run start\"",
    "remix-serve": "remix dev --manual -c \"npm run start\"",
    "shopifydev": "shopify app dev --tunnel-url=https://{your-subdomain}.thingify.dev:80",
    "start": "wrangler pages dev --port=8002 --local --d1=DB --compatibility-date=2023-06-21 ./public",
    "typecheck": "tsc",
    "pages:deploy": "pnpm run build && wrangler pages deploy ./public",
    "db:generate": "drizzle-kit generate:sqlite --schema=./schema.ts --out=./migrations",
    "dev:db:list": "npx wrangler d1 migrations list prod-d1 --local ",
    "dev:db:apply": "npx wrangler d1 migrations apply prod-d1 --local ",
    "prod:db:list": "npx wrangler d1 migrations list prod-d1 --remote",
    "prod:db:apply": "npx wrangler d1 migrations apply prod-d1 --remote"
  },
  "dependencies": {
    "@libsql/client": "^0.5.6",
    "@remix-run/cloudflare": "^2.8.1",
    "@remix-run/cloudflare-pages": "^2.8.1",
    "@remix-run/css-bundle": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@shopify/app": "^3.57.1",
    "@shopify/cli": "^3.57.1",
    "@shopify/plugin-cloudflare": "^3.57.1",
    "@shopify/polaris": "^12.22.1",
    "@shopify/shopify-api": "^8.1.1",
    "@shopify/shopify-app-remix": "^2.7.0",
    "@shopify/shopify-app-session-storage": "^2.1.2",
    "@shopify/shopify-app-session-storage-drizzle": "^1.0.0",
    "@shopify/shopify-app-session-storage-kv": "^2.0.4",
    "@shopify/shopify-app-session-storage-memory": "^2.0.4",
    "@shopify/shopify-app-session-storage-sqlite": "^2.0.4",
    "@shopify/web-pixels-extension": "^0.4.22",
    "@types/node": "^20.11.30",
    "better-sqlite3": "^9.4.3",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.30.4",
    "isbot": "^3.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240320.1",
    "@remix-run/dev": "^2.8.1",
    "@remix-run/eslint-config": "^2.8.1",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "eslint": "^8.57.0",
    "typescript": "^5.4.3",
    "wrangler": "^3.37.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
